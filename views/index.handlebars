<div class="wrapper">
  <h1>BURGERS APP</h1>
  <div class="addBurg">
    <h2>Add New Burger</h2>
    <form class="create-form">

      <div class="addForm">
        <label for="burg">NEW BURGER'S NAME:</label>
        <input type="text" id="burg" name="name">
        <button class="addBtn" type="submit">ADD</button>
      </div>


    </form>
  </div>
  <div class="content">
    <div class="burgList">
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="burgList">

      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>